<h1>All Clothing Articles</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Brand</th>
    <th>Size</th>
    <th>Color</th>
    <th>Style</th>
    <th>Category</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clothing_articles.each do |clothing_article| %>
  <tr>
    <td><%= clothing_article.name %></td>
    <td><%= clothing_article.brand %></td>
    <td><%= clothing_article.size %></td>
    <td><%= clothing_article.color %></td>
    <td><%= clothing_article.style %></td>
    <td><%= clothing_article.category %></td>
    <td><%= image_tag 'http://24.media.tumblr.com/avatar_0b4d45feb385_64.png' %></td>
    <td><%= link_to 'Show', clothing_article, class: 'btn' %></td>
    <td><%= link_to 'Edit', edit_clothing_article_path(clothing_article), class: 'btn btn-warning' %></td>
    <td><%= link_to 'Destroy', clothing_article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Clothing article', new_clothing_article_path, class: 'btn btn-success' %>

